<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="@string/react__response_label"
		android:labelFor="@id/react_response"
		android:textSize="20dp"/>
	<EditText
		android:id="@+id/react_response"
        android:layout_width="match_parent"
		android:layout_height="100px"
		android:background="@color/edittext_background"
		android:textColor="@color/edittext_foreground"
		android:hint="@string/react_response_edittext_hint" />
	<TextView
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="@string/react_message_label"
		android:labelFor="@id/react_message"
		android:textSize="20dp"/>
	<EditText
		android:id="@+id/react_message"
        android:layout_width="match_parent"
		android:layout_height="100px"
		android:background="@color/edittext_background"
		android:textColor="@color/edittext_foreground"
		android:hint="@string/react_message_edittext_hint" />
	<Button
		android:id="@+id/navigate_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/navigate_to_react_button_text"/>
</LinearLayout>